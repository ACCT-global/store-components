{
  "name": "vtex.store-components",
  "scripts": {
    "pretest": "yarn",
    "test": "jest"
  },
  "dependencies": {
    "@material-ui/core": "^3.5.1",
    "@vtex/styleguide": "~2.3.0",
    "apollo-client": "~2.2.3",
    "classnames": "^2.2.5",
    "debounce": "^1.2.0",
    "downshift": "^1.31.14",
    "graphql": "~0.13.2",
    "graphql-tag": "~2.8.0",
    "inherits": "^2.0.3",
    "lodash": "^4.17.11",
    "lodash.get": "^4.4.2",
    "prop-types": "^15.6.2",
    "ramda": "^0.25.0",
    "react": "^16.3.2",
    "react-apollo": "~2.1.3",
    "react-collapse": "^4.0.3",
    "react-content-loader": "^3.1.2",
    "react-cursor-position": "^2.4.2",
    "react-dom": "^16.8.3",
    "react-html-parser": "^2.0.2",
    "react-id-swiper": "^1.6.8",
    "react-motion": "^0.5.2",
    "react-resize-detector": "^3.0.1",
    "react-responsive-modal": "^2.0.1",
    "react-share": "^2.1.1",
    "react-slick": "^0.23.1",
    "react-transition-group": "^2.5.0",
    "recompose": "^0.30.0",
    "render": "^0.1.4",
    "slick-carousel": "^1.8.1",
    "underscore": "^1.9.1",
    "vtex-tachyons": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "apollo-cache-inmemory": "^1.4.3",
    "babel-jest": "^24.1.0",
    "babel-preset-react-app": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.2",
    "jest-transform-graphql": "^2.1.0",
    "react-intl": "^2.8.0",
    "react-testing-library": "^6.0.0",
    "regenerator-runtime": "^0.13.1"
  },
  "vtexScriptsOverride": {
    "srcPath": "."
  },
  "jest": {
    "verbose": true,
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/testUtils"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/testUtils/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}
